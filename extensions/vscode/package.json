{
    "name": "code-historian",
    "displayName": "Code Historian",
    "description": "Advanced code history analysis and visualization",
    "version": "1.0.0",
    "publisher": "code-historian",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other",
        "Visualization",
        "Programming Languages"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "codeHistorian.startAnalysis",
                "title": "Start Analysis",
                "category": "Code Historian"
            },
            {
                "command": "codeHistorian.showDashboard",
                "title": "Show Dashboard",
                "category": "Code Historian"
            },
            {
                "command": "codeHistorian.showHistory",
                "title": "Show File History",
                "category": "Code Historian"
            },
            {
                "command": "codeHistorian.fixTypeScriptErrors",
                "title": "Fix TypeScript Errors",
                "category": "Code Historian"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "code-historian",
                    "title": "Code Historian",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "code-historian": [
                {
                    "id": "codeHistorianExplorer",
                    "name": "Explorer"
                },
                {
                    "id": "codeHistorianMetrics",
                    "name": "Metrics"
                }
            ]
        },
        "configuration": {
            "title": "Code Historian",
            "properties": {
                "codeHistorian.serverUrl": {
                    "type": "string",
                    "default": "http://localhost:3000",
                    "description": "Local server URL (defaults to localhost, change only for enterprise deployments)"
                },
                "codeHistorian.apiKey": {
                    "type": "string",
                    "description": "API key for enterprise deployments (not required for local usage)",
                    "scope": "application"
                },
                "codeHistorian.enableNotifications": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable notifications"
                },
                "codeHistorian.maxHistoryDepth": {
                    "type": "number",
                    "default": 100,
                    "description": "Maximum history depth for analysis"
                },
                "codeHistorian.autoFixTypeScriptErrors": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically fix TypeScript errors when possible"
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "command": "codeHistorian.showHistory",
                    "group": "navigation"
                },
                {
                    "command": "codeHistorian.fixTypeScriptErrors",
                    "group": "1_modification",
                    "when": "resourceLangId == typescript"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.18.34",
        "@types/vscode": "^1.75.0",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.1.3",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "ws": "^8.13.0",
        "chart.js": "^4.3.0",
        "dayjs": "^1.11.8",
        "isomorphic-ws": "^5.0.0"
    }
} 